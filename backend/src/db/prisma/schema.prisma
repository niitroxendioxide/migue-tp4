datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
    id        Int      @id @default(autoincrement())
    name      String
    full_name String
    email     String   @unique
    dni       Int      @unique
    password  String
    isAdmin   Boolean  @default(false)
    balance   Int      @default(0)

    created_events Event[] @relation()
    events    EventUser[] 
    payments  PaymentMethod[]
    tokens    Tokens[]

    @@map("users")
}

  model Event {
    id          Int      @id @default(autoincrement())
    id_user     Int
    creator     User     @relation(fields: [id_user], references: [id])
    is_cancelled Boolean  @default(false)
    title       String
    date        DateTime @default(now())
    description String
    location    String
    image_url   String
    price       Int

    attendees   EventUser[] 

    @@map("events")
}

model Tokens {
    id        Int      @id @default(autoincrement())
    token     String   @unique
    userId    Int
    user      User     @relation(fields: [userId], references: [id])
    createdAt DateTime @default(now())
    expiresAt DateTime
  
    @@map("tokens")
}

model EventUser {
    id          Int      @id @default(autoincrement())
    id_user     Int
    id_event    Int
    
    user        User     @relation(fields: [id_user], references: [id])
    event       Event    @relation(fields: [id_event], references: [id])
    
    @@map("event_user")
}

model PaymentMethod {
    id          Int      @id @default(autoincrement())
    type        String   
    provider    String   
    lastFour    String?  
    isDefault   Boolean  @default(false)
    expiresAt   DateTime? 
    
    userId      Int      
    user        User     @relation(fields: [userId], references: [id])
    
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    
    @@map("payment_methods")
}